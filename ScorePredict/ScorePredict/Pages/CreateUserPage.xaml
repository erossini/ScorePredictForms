<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="ScorePredict.Pages.CreateUserPage"
             BackgroundColor="#77B739" Title="Create User">

  <Grid HorizontalOptions="Fill" VerticalOptions="Fill" Padding="7">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" /> <!-- Blank (except on Windows Phone) -->
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Label Grid.Row="0">
      <Label.Text>
        <OnPlatform x:TypeArguments="x:String">
          <OnPlatform.WinPhone>
            Create User
          </OnPlatform.WinPhone>
        </OnPlatform>
      </Label.Text>
    </Label>

    <Entry Grid.Row="1" Placeholder="Username" TextColor="White" x:Name="txtUsername" />
    <Entry Grid.Row="2" Placeholder="Password" TextColor="White" IsPassword="True" x:Name="txtPassword" />
    <Entry Grid.Row="3" Placeholder="Confirm" TextColor="White" IsPassword="True" x:Name="txtConfirm" />
    
    <Button BackgroundColor="#3C8513" BorderRadius="10" TextColor="#FCD23C" Text="Create User"
            VerticalOptions="StartAndExpand" HorizontalOptions="Fill" BorderColor="#3C8513"
            Grid.Row="5" Clicked="CreateUser" />

  </Grid>
  
</ContentPage>